<article class="creative-session-card">
  <div class="creative-session-card-content">
    <div class="creative-session-header">
      <span class="creative-session-style"><%= creative_session.style %></span>
      <div class="creative-session-time">
        <%= render "shared/icons/clock", class: "icon" %>
        <%= creative_session.start_time.strftime("%I:%M %p") %>
      </div>
    </div>

    <h3 class="creative-session-title"><%= creative_session.title %></h3>
    
    <div class="creative-session-location">
      <%= render "shared/icons/location", class: "icon" %>
      <div>
        <h4><%= creative_session.location.name %></h4>
        <p><%= creative_session.location.city %>, <%= creative_session.location.state %></p>
      </div>
    </div>

    <%= link_to "View Details", creative_session_path(creative_session), class: "creative-session-card-link" %>
  </div>
</article> 
<div class="container">
  <h1>Jam Sessions in the Capital Region</h1>

  <section class="today-sessions">
    <h2>Today's Sessions</h2>
    <div class="sessions-grid">
      <% @today_sessions.each do |session| %>
        <%= render CreativeSessionCardComponent.new(creative_session: session) %>
      <% end %>
    </div>
  </section>

  <section class="upcoming-sessions">
    <h2>Upcoming Sessions</h2>
    <div class="sessions-grid">
      <% @upcoming_sessions.each do |session| %>
        <%= render CreativeSessionCardComponent.new(creative_session: session) %>
      <% end %>
    </div>
  </section>

  <% if user_signed_in? %>
    <%= link_to "Add New Session", new_creative_session_path, class: "button primary" %>
  <% end %>
</div> 